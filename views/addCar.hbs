      <div class="row">
        <div class="col-md-12">
        
            <h2>Add Car</h2>

            <br />
    
            <form method="post" action="/cars/add">
    
                <fieldset>
                    <legend>Car Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="carMake">Car Make:</label>
                                <input class="form-control" id="carMake" name="carMake" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="carModel">Car Model:</label>
                                <input class="form-control" id="carModel" name="carModel" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="carYear">Car Year:</label>
                                <input class="form-control" id="carYear" name="carYear" type="number" />
                            </div>
                        </div>
                    </div>                    
                </fieldset>
            <fieldset>
                    <legend>Vin Information</legend>
                    <div class="row">
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="vin">Vin:</label>
                                <input class="form-control" id="vin" name="vin" type="text"  />
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
    
                <input type="submit" class="btn btn-primary pull-right" value="Add Car" /><br /><br /><br />
    
            </form>
        </div>
      </div>
