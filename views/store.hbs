<div class="row">
    <div class="col-md-12">
        <h2>{{viewData.store.storeName}} - Store: {{viewData.store.storeId}}</h2>
        <hr />
        <form method="post" action="/store/update">
            <input type="hidden" name="storeId" value="{{viewData.store.storeId}}" />
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="storeName">Store Name:</label>
                            <input class="form-control" id="storeName" name="storeName" type="text" value="{{viewData.store.storeName}}" />
                        </div>
                    </div>
                </div>
                 <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storePhone">Store Phone:</label>
                                <input class="form-control" id="storePhone" name="storePhone" type="number" value="{{viewData.store.storePhone}}" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storeAddress">Store Address:</label>
                                <input class="form-control" id="storeAddress" name="storeAddress" type="text" value="{{viewData.store.storeAddress}}" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storeCity">Store City:</label>
                                <input class="form-control" id="storeCity" name="storeCity" type="text" value="{{viewData.store.storeCity}}" />
                            </div>
                        </div>
                    </div>   
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Store" /><br /><br /><br />
        </form>
    </div>
</div>