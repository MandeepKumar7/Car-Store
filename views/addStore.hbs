      <div class="row">
        <div class="col-md-12">
        
            <h2>Add Store</h2>

            <br />
    
            <form method="post" action="/stores/add">
    
                <fieldset>
                    <legend>Store Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storeName">Store Name:</label>
                                <input class="form-control" id="storeName" name="storeName" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storePhone">Store Phone:</label>
                                <input class="form-control" id="storePhone" name="storePhone" type="number" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storeAddress">Store Address:</label>
                                <input class="form-control" id="storeAddress" name="storeAddress" type="text" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="storeCity">Store City:</label>
                                <input class="form-control" id="storeCity" name="storeCity" type="text" />
                            </div>
                        </div>
                    </div>                    
                </fieldset>
    
                <hr />
    
                <input type="submit" class="btn btn-primary pull-right" value="Add Store" /><br /><br /><br />
    
            </form>
        </div>
      </div>
